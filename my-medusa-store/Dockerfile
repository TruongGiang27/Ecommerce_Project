# Build Medusa (Admin sáº½ Ä‘Æ°á»£c táº¡o ra táº¡i .medusa/client)
RUN npm run build

# Stage 2: Production Runner
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production

# CÃ i libc6-compat
RUN apk add --no-cache libc6-compat

# Copy node_modules
COPY --from=builder /app/node_modules ./node_modules

# Copy Backend Core
COPY --from=builder /app/.medusa ./.medusa
COPY --from=builder /app/package.json ./package.json

# Copy Config
COPY --from=builder /app/medusa-config.ts ./medusa-config.ts
COPY --from=builder /app/tsconfig.json ./tsconfig.json

# ğŸ‘‡ğŸ‘‡ğŸ‘‡ ÄÃƒ Sá»¬A Lá»–I Táº I ÄÃ‚Y ğŸ‘‡ğŸ‘‡ğŸ‘‡
# XÃ³a dÃ²ng COPY public cÅ© bá»‹ lá»—i
# Thay báº±ng lá»‡nh táº¡o thÆ° má»¥c public rá»—ng (Ä‘á»ƒ trÃ¡nh lá»—i náº¿u code cáº§n dÃ¹ng nÃ³)
RUN mkdir -p public

# Copy Admin tá»« .medusa/client ra thÃ nh thÆ° má»¥c build
COPY --from=builder /app/.medusa/client ./build

# Port
EXPOSE 9000

# Cháº¡y server
