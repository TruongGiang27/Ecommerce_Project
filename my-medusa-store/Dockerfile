# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# CÃ i Ä‘áº·t thÆ° viá»‡n há»‡ thá»‘ng
RUN apk add --no-cache libc6-compat python3 make g++

COPY package.json package-lock.json ./

# CÃ i Ä‘áº·t dependencies
RUN npm ci

COPY . .

# Build Medusa (Táº¡o ra .medusa vÃ  thÆ° má»¥c build chá»©a Admin)
RUN npm run build

# Stage 2: Production Runner
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production

# CÃ i libc6-compat
RUN apk add --no-cache libc6-compat

# Copy node_modules
COPY --from=builder /app/node_modules ./node_modules

# Copy Backend Core
COPY --from=builder /app/.medusa ./.medusa
COPY --from=builder /app/package.json ./package.json

# Copy Config
COPY --from=builder /app/medusa-config.ts ./medusa-config.ts
COPY --from=builder /app/tsconfig.json ./tsconfig.json

# ğŸ‘‡ğŸ‘‡ğŸ‘‡ Bá»” SUNG QUAN TRá»ŒNG Táº I ÄÃ‚Y ğŸ‘‡ğŸ‘‡ğŸ‘‡
# Copy thÆ° má»¥c public (nÆ¡i chá»©a assets tÄ©nh)
COPY --from=builder /app/public ./public
# Copy thÆ° má»¥c build (nÆ¡i chá»©a giao diá»‡n Admin Dashboard)
COPY --from=builder /app/build ./build

# Port
EXPOSE 9000

# Cháº¡y server
CMD ["npm", "run", "start"]