# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# CÃ i Ä‘áº·t thÆ° viá»‡n há»‡ thá»‘ng
RUN apk add --no-cache libc6-compat python3 make g++

COPY package.json package-lock.json ./

# CÃ i Ä‘áº·t dependencies
RUN npm ci

